{% extends 'base.html.twig' %}

{% block title %}coll√©giens-Citoyens{% endblock %}

{% block body %}
    <section class="container" id="page_content">
        <div class="row" id="content">
            <div class="col-12" id="content_title">
                <h3>{{ ressource.name }}</h3>
                <p>Test</p>
            </div>
            {% if ressource.imageName is null %}
                {% if ressource.isShowIntro == 1 and ressource.isShowReadMore == 1 %}
                    <div class="col-12" id="content_text">
                        <p>{{ ressource.content|raw }}</p>
                        <a href="{{ path('op_webapp_ressources_ressourceSlug', {'slug': ressource.slug}) }}">Lire la suite</a>
                    </div>
                    <div class="col-12" id="content_code">
                        <div>
                            {{ ressource.content|raw }}
                        </div>
                    </div>
                {% elseif ressource.isShowIntro == 1 and ressource.isShowReadMore == 0 %}
                    <div class="col-12" id="content_text">
                        <p>{{ ressource.intro|raw }}</p>
                        <a href="{{ path('op_webapp_ressources_ressourceSlug', {'slug': ressource.slug}) }}">Lire la suite</a>
                    </div>
                    <div class="col-12" id="content_code">
                        <div>
                            {{ ressource.content|raw }}
                        </div>
                    </div>
                {% else %}
                    <div class="col-12" id="content_code">
                        <div>
                            {{ ressource.content|raw }}
                        </div>
                    </div>
                {% endif%}
            {% else %}
                <div class="col-3">
                    <img class="img-fluid" src="{{ vich_uploader_asset(ressource, 'imageFile', 'App\\Entity\\Webapp\\Ressources') }}" alt="{{ ressource.imageName }}">
                </div>
                <div class="col-9" id="content_text">
                    {{ ressource.content|raw }}
                </div>
            {% endif %}
            {#
            {% if ressource.support is not null %}
                <div class="col-12" id="content_support">

                </div>
            {% endif %}
            #}
        </div>
        {% if is_granted('ROLE_USER') %}
            <div class="row" id="ressource_comments">
                <div class="col-12">
                {# {{ render(controller('App\\Controller\\Webapp\\CommentController::new')) }} #}
                </div>
            </div>
        {% endif %}
    </section>
{% endblock %}
