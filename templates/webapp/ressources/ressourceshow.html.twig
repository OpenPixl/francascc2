{% extends 'base.html.twig' %}

{% block title %}coll√©giens-Citoyens{% endblock %}

{% block body %}
    <section class="container" id="content">
        <div class="row">
            <div class="col-12" id="content_title">
                <h3 >{{ ressource.name }}</h3>
            </div>
        </div>
        <div class="row" id="content_text">
            <div class="col-12">
                {% if ressource.imageName is null %}
                    <div class="row">
                        <div class="col-12">
                        {% autoescape 'html'%}
                            {{ ressource.content|raw }}
                        {% endautoescape %}
                        </div>
                    </div>
                    {% if ressource.Linkmedia is null %}
                    {% else %}
                        <div class="row">
                            <div class="col-12">
                                {{ ressource.Linkmedia|raw }}
                            </div>
                        </div>
                    {% endif %}
                {% else %}
                    <div class="row mb-1">
                        <div class="col-3">
                            <img class="img-fluid" src="{{ vich_uploader_asset(ressource, 'imageFile', 'App\\Entity\\Webapp\\Ressources') }}" alt="{{ ressource.imageName }}">
                        </div>
                        <div class="col-9" id="content_text">
                            {% autoescape 'html'%}
                                {{ ressource.content|raw }}
                            {% endautoescape %}
                        </div>
                    </div>
                    <div class="row">
                        {% if ressource.Linkmedia is null %}
                        {% else %}
                            <div class="col-12">
                                {{ ressource.Linkmedia|raw }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="row">
                    {% if ressource.support is not null %}
                        {% if ressource.supportName == "document" %}

                        {% elseif ressource.supportName == "video" %}

                        {% elseif ressource.supportName == "audio" %}

                        {% endif %}
                    {% endif %}
                    </div>
                {% endif %}
            </div>

        </div>

            {#
            {% if ressource.support is not null %}
                <div class="col-12" id="content_support">

                </div>
            {% endif %}
            #}
        </div>
        {% if is_granted('ROLE_USER') %}
            <div class="row" id="ressource_comments">
                <div class="col-12">
                {# {{ render(controller('App\\Controller\\Webapp\\CommentController::new')) }} #}
                </div>
            </div>
        {% endif %}
    </section>
{% endblock %}
