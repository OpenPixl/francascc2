<table class="table table-sm">
    <thead>
    <tr>
        <th>De</th>
        <th>Sujet</th>
        <th>Envoyé le</th>
        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for message in messages %}
        {% if message.isRead == 1 %}
            <tr>
                <td>{{ message.author }}</td>
                <td><a href="{{ path('op_webapp_message_show', {'id': message.id}) }}">{{ message.subject }}</a></td>
                <td>{{ message.createAt ? message.createAt|date('d-m-Y') : '' }}</td>
                <td align="right">
                    <a href="{{ path('op_webapp_message_show', {'id': message.id}) }}"><i class="fas fa-eye"></i></a> |
                    <a class="btnDeleted" href="{{ path('op_webapp_message_deleteonespcoll', {'id': message.id}) }}"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr class="table-secondary">
                <td>{{ message.author }}</td>
                <td><a href="{{ path('op_webapp_message_show', {'id': message.id}) }}">{{ message.subject }}</a></td>
                <td>{{ message.createAt ? message.createAt|date('d-m-Y') : '' }}</td>
                <td align="right">
                    <a href="{{ path('op_webapp_message_show', {'id': message.id}) }}"><i class="fas fa-eye"></i></a> |
                    <a href="{{ path('op_webapp_message_deleteonespcoll', {'id': message.id}) }}"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        {% endif %}
    {% else %}
        <tr>
            <td colspan="6">Aucun message arrivé</td>
        </tr>
    {% endfor %}
    </tbody>
</table>