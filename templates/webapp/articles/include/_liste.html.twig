<div class="table-responsive">
    <table class="table align-middle">
        <thead>
        <tr>
            <th></th>
            <th>Titre</th>
            <th>Auteur</th>
            <th>thème</th>
            <th>Support</th>
            <th>{{ knp_pagination_sortable(articles, 'Créer le', 'a.createdAt') }}</th>
            <th>{{ knp_pagination_sortable(articles, 'Modifier le', 'a.updatedAt') }}</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><input type="checkbox"></td>
                <td><strong><a href="{{ path('op_webapp_articles_edit_admin', {'id': article.id}) }}">{{ article.title }}</a></strong><br><small>{{ article.slug }}</small></td>
                <td>{% if article.author %}{{ article.author}}{% else %}{{ article.college }}{% endif %}</td>
                <td>{{ article.theme }}</td>
                <td>{{ article.support }}</td>
                <td>{{ article.createdAt ? article.createdAt|format_datetime('medium', 'none', locale='fr') : '' }}</td>
                <td>{{ article.updatedAt ? article.updatedAt|format_datetime('medium', 'none', locale='fr') : '' }}</td>
                <td>
                    <a href="{{ path('op_webapp_articles_show', {'id': article.id}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{ path('op_webapp_articles_edit', {'id': article.id}) }}"><i class="far fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>