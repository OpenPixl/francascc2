{% if article.imageName is not null %}
    <div class="col-3 g-0" id="img_article">
        <img class="img-fluid" src="{{ vich_uploader_asset(article, 'imageFile', 'App\\Entity\\Webapp\\Articles' ) | imagine_filter('thumb_img_article') }}" alt="{{ article.imageName }}">
        {#
        <div id="logo_article">
            {% if article.support is not null %}
            <div id="logo_article_support">
                {{ render(controller('App\\Controller\\Webapp\\SupportController::Show', {'id': article.idsupport})) }}
            </div>
            {% else %}
            {% endif %}
            {% if article.theme is not null %}
            <div id="logo_article_theme">
                {{ render(controller('App\\Controller\\Webapp\\ThemeController::Show', {'id': article.idtheme})) }}
            </div>
            {% else %}
            {% endif %}
        </div>
        #}
    </div>
    <div class="col-9 g-0" id="content_text">
        <div class="row">
            <div class="col-12">
                <article id="blockArticle">
                    <div class="article-header">
                        <h3><a href="{{ path('op_webapp_articles_articleSlug', {'id': article.id, 'idcollege':article.idcollege}) }}">{{ article.title }}</a></h3>
                    </div>
                    <div class="article-content">
                        {{ article.content|u.truncate(200, ' ...')|raw }}
                    </div>
                    {% if app.request.attributes.get('_route') == 'op_webapp_articles_articleSlug' %}
                    <div class="d-flex justify-content-between article-footer">
                        <div></div>
                        <div><p class="pe-1 createdAt">Article crée le : <span class="">{{ article.createdAt|format_datetime('medium', 'none', locale='fr')  }}</span></p></div>
                    </div>
                    {% else %}
                    <div class="d-flex justify-content-between article-footer">
                        <div><p><a href="{{ path('op_webapp_articles_articleSlug', {'id': article.id, 'idcollege':article.idcollege}) }}">Lire la suite</a></p></div>
                        <div class="pe-1 createdAt"><p>Article crée le : <span class="">{{ article.createdAt|format_datetime('medium', 'none', locale='fr')  }}</span></p></div>
                    </div>
                    {% endif %}
                </article>
            </div>
        </div>
    </div>
