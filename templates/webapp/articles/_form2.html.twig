{{ form_start(form) }}
<div class="card-body">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <button class="nav-link active" aria-current="page" data-bs-toggle="tab" data-bs-target="#Contenu" type="button" role="tab" aria-controls="Contenu" aria-selected="true"><h5>Contenu</h5></button>
        </li>
        <li class="nav-item">
            <button class="nav-link" aria-current="page" data-bs-toggle="tab" data-bs-target="#Medias" type="button" role="tab" aria-controls="Options" aria-selected="true"><h5>Médias</h5></button>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="Contenu" role="tabpanel" aria-labelledby="home-tab">
            <div class="row">
                <div class="col-8 mt-2">
                    <h5>L'article</h5>
                    <hr>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-3">
                            <b>{{ form_label(form.title, 'Titre', {'label_attr': {'class':'form-label'}}) }}</b>
                        </div>
                        <div class="col-9">
                            {{ form_widget(form.title, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'titre de la page'}}) }}
                        </div>
                    </div>

                    <hr>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-3">
                            <b>{{ form_label(form.content, 'Contenu', {'label_attr': {'class':'form-label'}}) }}</b>
                        </div>
                        <div class="col-9">
                            {{ form_widget(form.content, {'attr': {'class': 'form-control form-control-sm', 'rows':'15'}}) }}
                        </div>
                    </div>
                </div>
                <div class="col-4 mt-2">
                    <h5>Options de l'article</h5>
                    <hr>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-4">
                            <b>{{ form_label(form.theme, 'Thème', {'label_attr': {'class':'form-label'}}) }}</b>
                        </div>
                        <div class="col-8">
                            {{ form_widget(form.theme, {'attr': {'class': 'form-select form-select-sm'}}) }}
                        </div>
                    </div>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-4">
                            <b>{{ form_label(form.support, 'Support', {'label_attr': {'class':'form-label'}}) }}</b>
                        </div>
                        <div class="col-8">
                            {{ form_widget(form.support, {'attr': {'class': 'form-select form-select-sm'}}) }}
                        </div>
                    </div>
                    <div class="row mb-1 mt-1 g-1">
                        <fieldset>
                            <div class="form-check form-switch">
                                {{ form_widget(form.isShowReadMore, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.isShowReadMore, 'Afficher le bouton : Lire la suite', {'label_attr': {'class':'form-check-label'}}) }}
                            </div>
                        </fieldset>
                    </div>
                    <h5>Categorie</h5>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-12">
                            {{ form_widget(form.category, {'attr': {'class': 'form-select form-select-sm'}}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="Medias" role="tabpanel" aria-labelledby="home-tab">
            <div class="row">
                <div class="col-8 mt-2">
                    <h5>L'image de l'article</h5>
                    <hr>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-12">
                            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        </div>
                    </div>
                </div>
                <div class="col-4 mt-2">
                    <h5>Le support de l'article</h5>
                    <hr>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-12">
                            {{ form_widget(form.docFile, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card-footer">
    <a class="btn btn-secondary btn-sm" href="{{ path('op_webapp_articles_index') }}"><i class="fas fa-angle-double-left"></i> Retour à la liste</a> <button class="btn btn-sm btn-primary">{{ button_label|default('Enregistrer') }}</button>
</div>

{{ form_end(form) }}
